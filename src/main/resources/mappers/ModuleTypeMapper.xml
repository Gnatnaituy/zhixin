<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixin.mapper.ModuleTypeMapper">

    <insert id="save">
        INSERT INTO `module_type` (name, background, sort)
        VALUES (#{moduleSubType.name},
                #{moduleSubType.background},
                #{moduleSubType.sort})
    </insert>

    <update id="update">
        UPDATE `module_type`
        SET name        = #{moduleType.name},
            sort        = #{moduleType.sort},
            update_time = NOW()
        WHERE id = #{moduleType.id}
    </update>

    <update id="delete">
        UPDATE `module_type`
        SET is_deleted = 1
        WHERE id = #{id}
    </update>

</mapper>